{
  "name": "movies-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "serve ./dist",
    "prebuild": "rimraf ./dist",
    "build": "npm-run-all build:static:* && npm run revision && npm run build:html",
    "build:html": "node scripts/build-html.js",
    "build:static:css": "node scripts/build-css.js",
    "build:static:js": "node scripts/build-js.js",
    "build:static:assets": "node scripts/build-static-assets.js",
    "revision": "node scripts/revision-hash.js && node scripts/revision-replace.js",
    "watch": "run-p watch:*",
    "watch:html": "chokidar 'src/**/*.ejs' --command 'npm run build:html'",
    "watch:js": "chokidar 'src/js/*.js' --command 'npm run build:static:js'",
    "watch:css": "chokidar 'src/css/*.css' --command 'npm run build:static:css'",
    "watch:assets": "chokidar 'src/**/*.*' --command 'npm run build:static:assets'"
  },
  "author": "Declan Rek",
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-filter": "^6.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-css-url": "^0.1.0",
    "gulp-rev-replace": "^0.4.4",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  }
}
