<%- include('./partials/head') %>


    <main>
        <section id="hokusai">
            <ul></ul>
        </section>

        <section id="kuniyoshi">
            <ul></ul>
        </section>

        <section id="home">
            <article class="container">
                <img src="/images/tsunami.webp" srcset="/images/tsunami.webp 120w,
                    /images/tsunami.webp 200w,
                    /images/tsunami.webp 300w" sizes="(max-width: 710px) 120px,
                    (max-width: 991px) 193px,
                    278px" alt="The Great Wave painting">
                <article class="text">
                    <h2>The place to discover art</h4>
                        <p>Don't forget to check out the highlighted artists Hokusai and Kuniyoshi at the top of this
                            website!</p>
                </article>
                <form method="get" action="/search" class="search-form" data-search-form>
                    <input type="search" placeholder="Search for artists..." id="search" name="query"
                        class="search-form__input" data-search-input>
                    <button type="submit" value="search" id="searchButton"></button>
                </form>
            </article>
            <ul>


                <% data.forEach((artworks)=> { %>
                    <li>
                        <% if (artworks.webImage) { %>
                            <img src=<%=artworks.webImage.url.slice(0, -3)+'=s300' %> alt=<%= artworks.title %>
                                >
                                <% } %>
                                    <section>
                                        <h2>
                                            <%= artworks.title %>
                                        </h2>
                                    </section>
                    </li>

                    <% }) %>
            </ul>
        </section>
    </main>
    <%- include('./partials/foot') %>